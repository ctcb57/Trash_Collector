<html>
    <head>
        <style>
            #map {
                width: 100%;
                height: 400px;
                background-color: grey;
            }
        </style>
    </head>
    <body>
        <h3>Customer Map</h3>
        @*Div element for the map*@
        <div id="map"></div>
        <script>
            function initMap() {
                var location = { lat: @Html.DisplayFor(model => model.latitude), lng: @Html.DisplayFor(model => model.longitute) };
                var map = new google.maps.Map(
                    document.getElementById('map'), { zoom: 16, center: location });
                var marker = new google.maps.Marker({ position: location, map: map });
            }
        </script>
        <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCvNx58z28nAtRCUDGJU6xi2qisdrmE1dQ&callback=initMap">
        </script>
    </body>
</html>
